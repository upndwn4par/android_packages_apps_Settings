<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="lollipopdream_settings"
        android:title="@string/lollipopdream_settings"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:title="@string/general_category"
        android:key="general_category" >

	<com.android.settings.lollipopdream.SystemSettingSwitchPreference
	    android:key="kill_app_longpress_back"
	    android:title="@string/kill_app_longpress_back_title"
	    android:summary="@string/kill_app_longpress_back_summary"
	    android:defaultValue="true" />

        <PreferenceScreen
            android:key="navigation_bar_dimen"
            android:fragment="com.android.settings.lollipopdream.NavBarDimen"
            android:title="@string/navbar_dimen_title"
	    android:summary="@string/navbar_dimen_summary" />

	<com.android.settings.lollipopdream.SystemSettingSwitchPreference
	    android:key="proximity_on_wake"
	    android:title="@string/proximity_wake_title"
	    android:summary="@string/proximity_wake_summary"
	    android:defaultValue="true" />

	<com.android.settings.lollipopdream.SystemSettingSwitchPreference
	    android:key="lockscreen_quick_unlock_control"
	    android:title="@string/lockscreen_quick_unlock_control_title"
	    android:summary="@string/lockscreen_quick_unlock_control_summary"
	    android:defaultValue="true" />

	<com.android.settings.lollipopdream.SystemSettingSwitchPreference
	    android:key="volume_wake_screen"
	    android:title="@string/volume_wake_screen_title"
	    android:summary="@string/volume_wake_screen_summary"
	    android:defaultValue="true" />

   </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/led_category"
        android:key="led_category" >

	<PreferenceScreen
	    android:key="battery_light"
	    android:title="@string/battery_light_title"
	    android:summary="@string/battery_light_summary"
	    android:fragment="com.android.settings.lollipopdream.notificationlight.BatteryLightSettings" />

	<PreferenceScreen
	    android:key="notification_light"
	    android:title="@string/notification_light_title"
	    android:summary="@string/notification_light_summary"
	    android:fragment="com.android.settings.lollipopdream.notificationlight.NotificationLightSettings" />

   </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/status_bar_category"
        android:key="status_bar_category" >

	<com.android.settings.lollipopdream.SystemSettingSwitchPreference
	    android:key="show_alarm_icon"
	    android:title="@string/show_alarm_icon_title"
	    android:summary="@string/show_alarm_icon_summary"
	    android:defaultValue="true" />

        <ListPreference
            android:key="status_bar_show_battery_percent"
            android:title="@string/status_bar_battery_percentage_title"
            android:dialogTitle="@string/status_bar_battery_percentage_dialog_title"
            android:entries="@array/status_bar_battery_percentage_entries"
            android:entryValues="@array/status_bar_battery_percentage_values" />

	<PreferenceScreen
	    android:fragment="com.android.settings.lollipopdream.StatusBarClockStyle"
	    android:key="clock_style_pref"
	    android:title="@string/status_bar_clock_title"
	    android:summary="@string/status_bar_clock_summary" />

	<com.android.settings.lollipopdream.SystemSettingSwitchPreference
	    android:key="double_tap_sleep_gesture"
	    android:title="@string/double_tap_to_sleep_title"
	    android:summary="@string/double_tap_to_sleep_summary"
	    android:defaultValue="true" />

	<com.android.settings.lollipopdream.SystemSettingSwitchPreference
	    android:key="status_bar_quick_qs_pulldown"
	    android:title="@string/status_bar_quick_qs_pulldown_title"
	    android:summary="@string/status_bar_quick_qs_pulldown_summary"
	    android:defaultValue="true" />

	<com.android.settings.lollipopdream.SystemSettingSwitchPreference
	    android:key="status_bar_locked_on_secure_keyguard"
	    android:title="@string/block_on_secure_keyguard_title"
	    android:summary="@string/block_on_secure_keyguard_summary"
	    android:defaultValue="true" />

   </PreferenceCategory>

</PreferenceScreen>
